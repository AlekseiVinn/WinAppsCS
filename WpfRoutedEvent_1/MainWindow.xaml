<Window x:Class="WpfRoutedEvent_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRoutedEvent_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        TextBoxBase.TextChanged="Window_TextChanged">
    
    <Grid TextBoxBase.TextChanged="Grid_TextChanged">
        <TextBox HorizontalAlignment="Left" Height="144" Margin="305,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="466" Background="#FFD8F3B3" TextChanged="TextChanged_Handler"/>
        <RadioButton x:Name="radBtn1" Content="Обработка события в Textbox" HorizontalAlignment="Left" Margin="75,60,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radBtn2" Content="Обработка события в Grid" HorizontalAlignment="Left" Margin="75,120,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radBtn3" Content="Обработка события в Window" HorizontalAlignment="Left" Margin="75,180,0,0" VerticalAlignment="Top"/>
        

    </Grid>
</Window>
