<Window x:Class="WpfRoutedEvent_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRoutedEvent_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtBox" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" Height="50"/>
        
        <StackPanel ButtonBase.Click="StackPanel_Click" HorizontalAlignment="Left" Margin="350,40,0,0" VerticalAlignment="Top" Width="100">
            <Button x:Name="btnAdd" Content="X+X"/>
            <Button x:Name="btnMult" Content="X*X"/>
            <Button x:Name="btnSqrt" Content="Sqrt (X)"/>
        </StackPanel>

    </Grid>
</Window>
